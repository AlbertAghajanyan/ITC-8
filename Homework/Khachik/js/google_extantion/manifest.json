{
  "name": "extension Example",
  "manifest_version": 2,
  "version": "0.1",
  "description": "Run process on page activated by click in extension popup",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [{
    "css": ["styles.css"],

    "matches": [
      "<all_urls>"
    ]
  }],
  "browser_action" : {
    "default_title" : "Hacke!!!", 
    "default_icon" : "img/img.png",
    "default_popup" : "popup.html" 
  }
}